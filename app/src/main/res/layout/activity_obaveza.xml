<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_obaveza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrej.timely.ObavezaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/prikazIspunjena">

        <TextView
            android:text="[Naziv obaveze]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prikazNaziv"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:text="[Opis obaveze]"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prikazOpis" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:text="Trajanje:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prikazTrajanje" />

        <TextView
            android:text="Datum:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prikazDatum" />

        <TextView
            android:text="Vrijeme:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prikazVrijeme" />

        <TextView
            android:text="Rok:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prikazRok" />

    </LinearLayout>

    <CheckBox
        android:text="Ispunjena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prikazIspunjena"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Zavrsena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prikazZavrsena"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="191dp"
        android:layout_marginStart="191dp"
        android:layout_toRightOf="@+id/prikazIspunjena" />

</RelativeLayout>
